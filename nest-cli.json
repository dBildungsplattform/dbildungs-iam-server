{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "monorepo": true,
    "compilerOptions": {
        "builder": "tsc",
        "deleteOutDir": true,
        "webpack": false,
        "tsConfigPath": "tsconfig.build.json"
    },
    "projects": {
        "server": {
            "type": "application",
            "root": "src",
            "entryFile": "src/server/main",
            "sourceRoot": "src",
            "compilerOptions": {
                "tsConfigPath": "tsconfig.build.json"
            }
        },
        "backend-for-frontend": {
            "type": "application",
            "root": "src",
            "entryFile": "src/backend-for-frontend/main",
            "sourceRoot": "src",
            "compilerOptions": {
                "tsConfigPath": "tsconfig.build.json"
            }
        },
        "console": {
            "type": "application",
            "root": "src",
            "entryFile": "src/console/main",
            "sourceRoot": "src",
            "compilerOptions": {
                "tsConfigPath": "tsconfig.build.json"
            }
        }
    }
}
